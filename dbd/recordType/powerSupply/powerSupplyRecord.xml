<?xml version="1.0" ?>
<DBDefinition>
<include addPath = "dbd" />

<recordType name = "powerSupply" supportName = "powerSupply" >
  <property name = "value" associatedField = "power" />
  <include href = "common.xml" />
  <field name = "alarm" type = "structure" structureName = "alarm"
      supportName = "alarm" />
  <field name = "power" type = "double" >
    <property name = "voltage" associatedField = "voltage" />
    <property name = "current" associatedField = "current" />
    <property name = "alarm" associatedField = "alarm" />
    <property name = "displayChararacteristics" associatedField = "displayCharacteristics" />
    <property name = "timeStamp" associatedField = "timeStamp" />
  </field>
  <field name = "input" type = "structure" />
  <field name = "voltage" type = "double" />
  <field name = "voltageInput" type = "structure"  />
  <field name = "current" type = "double" />
  <field name = "currentOutput" type = "structure" />
  <!-- instance can set
     structureName = "doubleAlarm" supportName = "doubleAlarm" -->
  <field name = "valueAlarm" type = "structure" />
  <field name = "output" type = "structure" />
  <!-- instance can set
     structureName = "doubleDisplayCharacteristics" -->
  <field name = "displayCharacteristics" type = "structure" />
  <!-- instance can set
     structureName = "doubleHistory" supportName = "history" -->
  <field name = "history" type = "structure" />
  <field name = "supportArray" type = "array"
     elementType = "structure" supportName = "supportArray" />
</recordType>

<support name = "powerSupply"
   factoryName = "org.epics.ioc.support.PowerSupplyFactory" />

</DBDefinition>
