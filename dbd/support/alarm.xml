<support name = "doubleAlarm"
  structureName = "doubleAlarm" 
  factoryName = "org.epics.ioc.support.DoubleAlarmFactory" />

<support name = "digitalAlarm"
  structureName = "digitalAlarm" 
  factoryName = "org.epics.ioc.support.DigitalAlarmFactory" />

</DBDefinition>
