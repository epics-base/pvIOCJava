<?xml version="1.0" ?>
<database>

<structure structureName = "portDriverLinkFactory">
  <scalar name = "supportFactory" scalarType = "string">
     org.epics.ioc.support.pdrv.PortDriverLinkFactory</scalar>
</structure>

<structure structureName = "portDriverLink">
  <auxInfo name = "supportFactory" scalarType = "string">org.epics.ioc.portDriverLinkFactory</auxInfo>
  <scalar name = "portName" scalarType = "string" />
  <scalar name = "deviceName" scalarType = "string" />
  <!-- timeout only used for asynchronous ports -->
  <scalar name = "timeout" scalarType = "double">1.0</scalar>
  <structure name = "alarm" extends = "alarm" />
</structure>

<structure structureName = "portDriverInterruptLink">
  <scalar name = "portName" scalarType = "string" />
  <scalar name = "deviceName" scalarType = "string" />
</structure>

</database>
