<?xml version="1.0" ?>
<IOCDatabase>

<record name = "currentRaw" type = "aiRawRecord">
    <input supportName = "asynLink">
        <configure structureName = "asynLink">
             <portName>port</portName>
             <addr>0</addr>
        </configure>
    </input>
</record>

<record name = "voltageRaw" type = "aiRawRecord">
    <input supportName = "asynLink">
        <configure structureName = "asynLink">
             <portName>port</portName>
             <addr>1</addr>
        </configure>
    </input>
</record>

<record name = "current" type = "aiLinearLinkedRecord">
    <aiRaw supportName = "inputLink">
        <configure structureName = "inputLink">
             <pvname>currentRaw.value</pvname>
             <process>true</process>
        </configure>
    </aiRaw>
</record>

<record name = "voltage" type = "aiLinearLinkedRecord">
    <aiRaw supportName = "inputLink">
        <configure structureName = "inputLink">
             <pvname>voltageRaw.value</pvname>
             <process>true</process>
        </configure>
    </aiRaw>
</record>



<record name = "examplePowerSupplyLinked" type = "powerSupplyLinkedRecord">
    <units>watts</units>
    <displayLimit>
        <low>0.0</low>
        <high>100.0</high>
    </displayLimit>
    <currentInput supportName = "inputLink">
        <configure structureName = "inputLink">
            <pvname>current.value</pvname>
            <process>true</process>
        </configure>
    </currentInput>
    <voltageInput supportName = "inputLink">
        <configure structureName = "inputLink">
            <pvname>voltage.value</pvname>
            <process>true</process>
        </configure>
    </voltageInput>
</record>

</IOCDatabase>
