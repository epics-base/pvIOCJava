<?xml version="1.0" ?>
<DBDefinition>
<menu name = "menuPriority">
    <choice>   low   </choice>
    <choice>medium</choice>
    <choice>high</choice>
</menu>
<menu name = "menuScan">
    <choice>passive</choice>
    <choice>event</choice>
    <choice>interrupt</choice>
    <choice>periodic</choice>
</menu>

<menu name = "menuAlarmSevr">
    <choice>none</choice>
    <choice>minor</choice>
    <choice>major</choice>
    <choice>invalid</choice>
</menu>

<!-- test for duplicate menu -->
<menu name = "menuAlarmSevr">
    <choice>none</choice>
    <choice>minor</choice>
    <choice>major</choice>
    <choice>invalid</choice>
</menu>

<structure name = "timeStamp">
    <field name = "secondsPastEpoch" type = "long" />
    <field name = "nanoSeconds" type = "int" />
</structure>

<structure name = "scan">
    <field name = "scan" type = "menu" menuName = "menuScan" />
    <field name = "rate" type = "double" />
    <field name = "phase" type = "int" />
</structure>
<structure name = "event">
    <field name = "eventNumber" type = "short" />
    <field name = "timeStampEvent" type = "int" />
    <field name = "timeStampLink" type = "link" />
</structure>

<structure name = "disableLink">
    <field name = "disabled" type = "boolean" />
    <field name = "value" type = "short" default = "1" />
    <field name = "input" type = "short" />
    <field name = "link" type = "link" />
    <field name = "disableAlarmSeverity"
           type = "menu" menuName = "menuAlarmSevr" />
</structure>
<structure name = "processLink">
    <field name = "pvname" type = "string" link = "true" />
    <field name = "wait" type = "boolean" />
    <field name = "timeout" type = "double" />
    <field name = "forceLocal" type = "boolean">
        <!-- if true pvname must be in local IOC -->
    </field>
</structure>

<structure name = "monitorLink">
    <field name = "pvname" type = "string" link = "true" />
    <field name = "process" type = "boolean">
        <!-- process this record when monitor occurs -->
    </field>
    <field name = "monitorOnly" type = "boolean">
        <!-- monitor only or data also -->
    </field>
    <field name = "inheritSeverity" type = "boolean" />
    <field name = "forceLocal" type = "boolean">
        <!-- if true pvname must be in local IOC -->
    </field>
</structure>

<structure name = "inputLink">
    <field name = "pvname" type = "string" link = "true" />
    <field name = "process" type = "boolean" />
    <field name = "wait" type = "boolean" />
    <field name = "timeout" type = "double" />
    <field name = "inheritSeverity" type = "boolean" />
    <field name = "forceLocal" type = "boolean" >
        <!-- if true pvname must be in local IOC -->
    </field>
</structure>

<structure name = "outputLink">
    <field name = "pvname" type = "string" link = "true" />
    <field name = "process" type = "boolean" />
    <field name = "wait" type = "boolean" />
    <field name = "timeout" type = "double" />
    <field name = "forceLocal" type = "boolean" >
        <!-- if true pvname must be in local IOC -->
        <boolean />
    </field>
</structure>

<structure name = "displayLimit">
    <field name = "low" type = "double" />
    <field name = "high" type = "double" />
</structure>

<!-- test for duplicate structure -->
<structure name = "displayLimit">
    <field name = "low" type = "double" />
    <field name = "high" type = "double" />
</structure>

<structure name = "linearConvertInput" supportName = "linearConvertInputSupport">
    <field name = "engUnitsLow" type = "double" />
    <field name = "engUnitsHigh" type = "double" />
    <field name = "slope" type = "double" />
    <field name = "intercept" type = "double" />
</structure>

<support name = "processLink" configureStructureName = "processLink"
    factoryName = "org.epics.ioc.support.LinkSupportFactory" />
<support name = "monitorLink" configureStructureName = "monitorLink"
    factoryName = "org.epics.ioc.support.LinkSupportFactory" />
<support name = "inputLink" configureStructureName = "inputLink"
    factoryName = "org.epics.ioc.support.LinkSupportFactory" />
<support name = "outputLink" configureStructureName = "outputLink"
    factoryName = "org.epics.ioc.support.LinkSupportFactory" />

<support name = "outputLink" configureStructureName = "outputLink" 
    factoryName = "org.epics.ioc.support.LinkSupportFactory"/>


<recordType name = "analog" supportName = "AnalogSupport">
    <field name = "value" type = "double">
        <property name = "status" associatedField = "status" />
        <property name = "severity" associatedField = "severity" />
        <property name = "timeStamp" associatedField = "timeStamp" />
        <property name = "units" associatedField = "units" />
        <property name = "displayLimit" associatedField = "displayLimit" />
    </field>
    <field name = "priority" type = "menu" menuName = "menuPriority" />
    <field name = "units" type = "string" />
    <field name = "status" type = "string" />
    <field name = "severity" type = "menu" menuName = "menuAlarmSevr" />
    <field name = "timeStamp" type = "structure" structureName = "timeStamp" />
    <field name = "displayLimit"
         type = "structure" structureName = "displayLimit" />
    <field name = "input" type = "link" />
    <field name = "rawValue" type = "int" />
    <field name = "linearConvert"
        type = "structure" structureName = "linearConvertInput" />
</recordType>


<structure name = "aiRaw">
    <field name = "value" type = "int" >
        <property name = "status" associatedField = "status" />
        <property name = "severity" associatedField = "severity" />
        <property name = "timeStamp" associatedField = ".." />
    </field>
    <field name = "status" type = "string" />
    <field name = "severity" type = "menu" menuName = "menuAlarmSevr" />
    <field name = "input" type = "link" />
</structure>

<structure name = "aiLinear">
    <property name = "rawValue" associatedField = "aiRaw.value" />
    <field name = "value" type = "double" >
        <property name = "status" associatedField = "status" />
        <property name = "severity" associatedField = "severity" />
        <property name = "units" associatedField = "units" />
        <property name = "displayLimit" associatedField = "displayLimit" />
        <property name = "timeStamp" associatedField = ".." />
    </field>
    <field name = "status" type = "string" />
    <field name = "severity" type = "menu" menuName = "menuAlarmSevr" />
    <field name = "units" type = "string" />
    <field name = "displayLimit"
         type = "structure" structureName = "displayLimit" />
    <field name = "aiRaw" type = "structure" structureName = "aiRaw"/>
    <field name = "linearConvert"
        type = "structure" structureName = "linearConvertInput" />
</structure>

<recordType name = "aiLinearRecord" supportName = "LinearSupport">
    <property name = "value" associatedField = "aiLinear.value" />
    <property name = "rawValue" associatedField = "aiLinear.rawValue" />
    <property name = "status" associatedField = "aiLinear.status" />
    <property name = "severity" associatedField = "aiLinear.severity" />
    <field name = "aiLinear" type = "structure" structureName = "aiLinear" >
        <property name = "timeStamp" associatedField = "timeStamp" />
    </field>
    <field name = "priority" type = "menu" menuName = "menuPriority" />
    <field name = "timeStamp" type = "structure" structureName = "timeStamp"/>
    <field name = "scan" type = "structure" structureName = "scan"/>
</recordType>

<recordType name = "aiRecord" supportName = "AnalogSupport">
    <property name = "value" associatedField = "aiLinear.value" />
    <property name = "status" associatedField = "aiLinear.status" />
    <property name = "severity" associatedField = "aiLinear.severity" />
    <field name = "aiInput" type = "structure" />
    <field name = "priority" type = "menu" menuName = "menuPriority" />
    <field name = "timeStamp" type = "structure" structureName = "timeStamp"/>
    <field name = "scan" type = "structure" structureName = "scan"/>
</recordType>

<recordType name = "allTypes">
    <field name = "boolean" type = "boolean" supportName = "booleanSupport" />
    <field name = "byte" type = "byte" supportName = "byteSupport"  />
    <field name = "short" type = "short" supportName = "shortSupport" />
    <field name = "int" type = "int" supportName = "intSupport" />
    <field name = "long" type = "long" supportName = "longSupport" />
    <field name = "float" type = "float" supportName = "floatSupport" />
    <field name = "double" type = "double" supportName = "doubleSupport" />
    <field name = "string" type = "string" supportName = "stringSupport" />
    <field name = "link" type = "link" supportName = "linkSupport" />
    <field name = "displayLimit"
         type = "structure" structureName = "displayLimit" supportName = "structSupport" />
    <field name = "booleanArray" type = "array" elementType = "boolean"
         supportName = "booleanArraySupport" />
    <field name = "byteArray" type = "array" elementType = "byte"
         supportName = "byteArraySupport" />
    <field name = "shortArray" type = "array" elementType = "short"
         supportName = "shortArraySupport" />
    <field name = "intArray" type = "array" elementType = "int"
         supportName = "intArraySupport" />
    <field name = "longArray" type = "array" elementType = "long"
         supportName = "longArraySupport" />
    <field name = "floatArray" type = "array" elementType = "float"
         supportName = "floatArraySupport" />
    <field name = "doubleArray" type = "array" elementType = "double"
         supportName = "doubleArraySupport" />
    <field name = "stringArray" type = "array" elementType = "string"
         supportName = "stringArraySupport" />
    <field name = "linkArray" type = "array" elementType = "link"
         supportName = "linkArraySupport" />
    <field name = "structArray" type = "array" elementType = "structure"
         supportName = "structArraySupport" />
</recordType>

<!-- test for duplicate recordType -->

<structure name = "aiRaw">
    <field name = "value" type = "int" >
        <property name = "status" associatedField = "status" />
        <property name = "severity" associatedField = "severity" />
        <property name = "timeStamp" associatedField = ".." />
    </field>
    <field name = "status" type = "string" />
    <field name = "severity" type = "menu" menuName = "menuAlarmSevr" />
    <field name = "input" type = "link" />
</structure>
    


</DBDefinition>
