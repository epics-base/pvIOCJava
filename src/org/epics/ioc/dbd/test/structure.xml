<?xml version="1.0" ?>
<DBDefinition>

<structure name = "enum">
    <field name = "index" type = "int" />
    <field name = "choice" type = "string" />
    <field name = "choices" type = "array" elementType = "string" />
</structure>
    
<structure name = "scanType">
    <field name = "index" type = "int"/>
    <field name = "choice" type = "string"/>
    <field name = "choices" type = "array" elementType = "string"
        default = "passive event periodic" />
</structure>

<structure name = "alarmSeverity">
    <field name = "index" type = "int"/>
    <field name = "choice" type = "string"/>
    <field name = "choices" type = "array" elementType = "string"
        default = "none minor major link" />
</structure>

<structure name = "timeStamp">
    <field name = "secondsPastEpoch" type = "long" />
    <field name = "nanoSeconds" type = "int" />
</structure>

<structure name = "scan">
    <field name = "scan" type = "structure" structureName = "scanType" />
    <field name = "rate" type = "double" />
    <field name = "phase" type = "int" />
</structure>
<structure name = "event">
    <field name = "eventNumber" type = "short" />
    <field name = "timeStampEvent" type = "int" />
    <field name = "timeStampLink" type = "structure" />
</structure>

<structure name = "disableLink" supportName = "disableSupport" >
    <field name = "disabled" type = "boolean" />
    <field name = "value" type = "short" default = "1" />
    <field name = "input" type = "short" />
    <field name = "link" type = "structure" supportName = "disableLinkSupport" />
    <field name = "disableAlarmSeverity"
           type = "structure" structureName = "alarmSeverity" />
</structure>
<structure name = "processLink">
    <field name = "pvname" type = "string" link = "true" />
    <field name = "wait" type = "boolean" />
    <field name = "timeout" type = "double" />
    <field name = "forceLocal" type = "boolean">
        <!-- if true pvname must be in local IOC -->
    </field>
</structure>

<structure name = "monitorLink">
    <field name = "pvname" type = "string" link = "true" />
    <field name = "process" type = "boolean">
        <!-- process this record when monitor occurs -->
    </field>
    <field name = "monitorOnly" type = "boolean">
        <!-- monitor only or data also -->
    </field>
    <field name = "inheritSeverity" type = "boolean" />
    <field name = "forceLocal" type = "boolean">
        <!-- if true pvname must be in local IOC -->
    </field>
</structure>

<structure name = "inputLink">
    <field name = "pvname" type = "string" link = "true" />
    <field name = "process" type = "boolean" />
    <field name = "wait" type = "boolean" />
    <field name = "timeout" type = "double" />
    <field name = "inheritSeverity" type = "boolean" />
    <field name = "forceLocal" type = "boolean" >
        <!-- if true pvname must be in local IOC -->
    </field>
</structure>

<structure name = "outputLink">
    <field name = "pvname" type = "string" link = "true" />
    <field name = "process" type = "boolean" />
    <field name = "wait" type = "boolean" />
    <field name = "timeout" type = "double" />
    <field name = "forceLocal" type = "boolean" >
        <!-- if true pvname must be in local IOC -->
        <boolean />
    </field>
</structure>

<structure name = "displayLimit">
    <field name = "low" type = "double" />
    <field name = "high" type = "double" />
</structure>


<structure name = "linearConvertInput" supportName = "linearConvertInputSupport">
    <field name = "engUnitsLow" type = "double" />
    <field name = "engUnitsHigh" type = "double" />
    <field name = "slope" type = "double" />
    <field name = "intercept" type = "double" />
</structure>

</DBDefinition>
