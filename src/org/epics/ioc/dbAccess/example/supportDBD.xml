<?xml version="1.0" ?>
<DBDefinition>

<menu name = "menuPriority">
    <choice>low</choice>
    <choice>medium</choice>
    <choice>high</choice>
</menu>

<structure name = "displayLimit">
    <field name = "low" type = "double" />
    <field name = "high" type = "double" />
</structure>

<structure name = "config">
    <field name = "xxx" type = "string" />
    <field name = "yyy" type = "int" />
</structure>


<support name = "noConfig"
    factoryName = "junkFactoryName" />
<support name = "withConfig" configurationStructureName = "config" 
    factoryName = "org.epics.ioc.support.Dummy" />
<support name = "OverrideNoConfig"
    factoryName = "junkFactoryName" />
<support name = "OverrideWithConfig" configurationStructureName = "config" 
    factoryName = "org.epics.ioc.support.Dummy" />

<recordType name = "noSupportRecord">
    <field name = "value" type = "double" />
</recordType>

<recordType name = "noConfigRecord" supportName = "noConfig">
    <field name = "value" type = "double" />
</recordType>

<recordType name = "configRecord" supportName = "withConfig">
    <field name = "value" type = "double" />
</recordType>

<structure name = "noSupportStruct">
    <field name = "value" type = "double" />
</structure>

<structure name = "noConfigStruct" supportName = "noConfig">
    <field name = "value" type = "double" />
</structure>

<structure name = "configStruct" supportName = "withConfig">
    <field name = "value" type = "double" />
</structure>

<recordType name = "hasStructures" supportName = "noConfig">
    <field name = "noSupport"
         type = "structure" structureName = "noSupportStruct" />
    <field name = "noConfig" 
         type = "structure" structureName = "noConfigStruct" />
    <field name = "config" 
         type = "structure" structureName = "configStruct" />
</recordType>


<recordType name = "manyTypes" supportName = "noConfig">
    <field name = "boolean" type = "boolean"
    />
    <field name = "double" type = "double"
    />
    <field name = "string" type = "string"
    />
    <field name = "enum" type = "enum"
    />
    <field name = "menu" type = "menu" menuName = "menuPriority" />
    <field name = "displayLimit"
         type = "structure" structureName = "displayLimit" />
    <field name = "link" type = "link"
    />
    <field name = "booleanArray" type = "array" elementType = "boolean"
    />
    <field name = "doubleArray" type = "array" elementType = "double"
    />
    <field name = "stringArray" type = "array" elementType = "string"
    />
    <field name = "enumArray" type = "array" elementType = "enum"
    />
    <field name = "menuArray" type = "array" elementType = "menu"
    />
    <field name = "linkArray" type = "array" elementType = "link"
    />
    <field name = "structArray" type = "array" elementType = "structure"
    />
    <field name = "arrayArray" type = "array" elementType = "array"
    />

    <field name = "booleanNoConfig" type = "boolean" supportName = "noConfig" />
    <field name = "doubleNoConfig" type = "double" supportName = "noConfig" />
    <field name = "stringNoConfig" type = "string" supportName = "noConfig" />
    <field name = "enumNoConfig" type = "enum" supportName = "noConfig" />
    <field name = "menuNoConfig" type = "menu" menuName = "menuPriority" 
