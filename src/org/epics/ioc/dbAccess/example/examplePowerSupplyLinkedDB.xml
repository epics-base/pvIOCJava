<?xml version="1.0" ?>
<IOCDatabase>

<record name = "currentRaw" type = "aiRawRecord">
    <input linkSupportName = "org.epics.ioc.support.AsynLink"
             configStructureName = "asynLink">
         <portName>port</portName>
         <addr>0</addr>
    </input>
</record>

<record name = "voltageRaw" type = "aiRawRecord">
    <input linkSupportName = "org.epics.ioc.support.AsynLink"
             configStructureName = "asynLink">
         <portName>port</portName>
         <addr>1</addr>
    </input>
</record>

<record name = "current" type = "aiLinearLinkedRecord">
    <aiRaw linkSupportName = "org.epics.ioc.support.InputLink"
             configStructureName = "inputLink">
         <pvname>currentRaw.value</pvname>
         <process>true</process>
         <wait>true</wait>
    </aiRaw>
</record>

<record name = "voltage" type = "aiLinearLinkedRecord">
    <aiRaw linkSupportName = "org.epics.ioc.support.InputLink"
             configStructureName = "inputLink">
         <pvname>voltageRaw.value</pvname>
         <process>true</process>
         <wait>true</wait>
    </aiRaw>
</record>



<record name = "examplePowerSupplyLinked" type = "powerSupplyLinkedRecord">
    <units>watts</units>
    <displayLimit>
        <low>0.0</low>
        <high>100.0</high>
    </displayLimit>
    <currentInput linkSupportName = "org.epics.ioc.support.InputLink"
             configStructureName = "inputLink">
         <pvname>current.value</pvname>
         <process>true</process>
         <wait>true</wait>
    </currentInput>
    <voltageInput linkSupportName = "org.epics.ioc.support.InputLink"
             configStructureName = "inputLink">
         <pvname>voltage.value</pvname>
         <process>true</process>
         <wait>true</wait>
    </voltageInput>
</record>

</IOCDatabase>
