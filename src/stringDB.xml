<?xml version="1.0" ?>
<IOCDatabase>

<record name = "echoDriverPort" type = "port">
    <factoryName>org.epics.ioc.pdrv.testDriver.EchoDriverFactory</factoryName>
    <portName>echoDriver</portName>
    <driverParameters structureName = "echoDriver" >
        <multiDevice>true</multiDevice>
        <delay>.5</delay>
    </driverParameters>
</record>

<record name = "stringCounter" type = "calc">
    <calcArgArray>
        <value structureName = "calcArg">
            <value>0.0</value>
            <name>min</name>
        </value>
        <value structureName = "calcArg">
            <value>10.0</value>
            <name>max</name>
        </value>
        <value structureName = "calcArg">
            <value>1.0</value>
            <name>inc</name>
        </value>
    </calcArgArray>
    <calculator supportName = "counterCalculator" />
    <doubleAlarm>
        <configure structureName = "doubleAlarm">
          <active>true</active>
          <interval>
              <value structureName = "doubleAlarmInterval">
                  <value>2.0</value>
                  <severity>major</severity>
              </value>
              <value structureName = "doubleAlarmInterval">
                  <value>4.0</value>
                  <severity>minor</severity>
              </value>
              <value structureName = "doubleAlarmInterval">
                  <value>6.0</value>
                  <severity>none</severity>
              </value>
              <value structureName = "doubleAlarmInterval">
                  <value>8.0</value>
                  <severity>minor</severity>
              </value>
              <value structureName = "doubleAlarmInterval">
                  <value>10.0</value>
                  <severity>major</severity>
              </value>
          </interval>
          <outOfRange>invalid</outOfRange>
          <hystersis>0.1</hystersis>
        </configure>
    </doubleAlarm>
    <units>counts</units>
    <displayLimit>
        <low>0.0</low>
        <high>10.0</high>
    </displayLimit>
    <scan>
        <scan>periodic</scan>
        <rate>2.0</rate>
    </scan>
    <linkArray>
        <value structureName = "linkArrayElement">
            <wait>false</wait>
            <link  supportName = "outputLink" >
                <configure structureName = "outputLink">
                    <pvname>stringOut</pvname>
                    <process>true</process>
                </configure>
            </link>
        </value>
    </linkArray>
</record>

<record name = "stringOut" type = "string">
    <output supportName = "pdrvOctetOutput" >
        <configure structureName = "pdrvLink">
            <portName>echoDriver</portName>
            <addr>0</addr>
            <timeout>.1</timeout>
        </configure>
    </output>
    <linkArray>
        <value structureName = "linkArrayElement">
            <wait>false</wait>
            <link  supportName = "outputLink" >
                <configure structureName = "outputLink">
                    <pvname>stringIn</pvname>
                    <process>true</process>
                </configure>
            </link>
        </value>
    </linkArray>
</record>

<record name = "stringIn" type = "string">
    <input supportName = "pdrvOctetInput" >
        <configure structureName = "pdrvLink">
            <portName>echoDriver</portName>
            <addr>0</addr>
            <timeout>.1</timeout>
        </configure>
    </input>
</record>


</IOCDatabase>
