<?xml version="1.0" ?>
<IOCDatabase>


<record name = "aiRawCounter" type = "calcDouble">
    <calcArgArray>
        <value structureName = "calcDoubleArg">
            <value>-2048.0</value>
            <name>min</name>
        </value>
        <value structureName = "calcDoubleArg">
            <value>2047.0</value>
            <name>max</name>
        </value>
        <value structureName = "calcDoubleArg">
            <value>100.0</value>
            <name>inc</name>
        </value>
    </calcArgArray>
    <calculator supportName = "counterCalculator" />
    <units>counts</units>
    <scan>
        <scan>periodic</scan>
        <rate>1.0</rate>
    </scan>
    <linkArray>
        <value structureName = "linkArrayElement">
            <wait>false</wait>
            <link  supportName = "outputLink" >
                <configure structureName = "outputLink">
                    <pvname>aiRaw</pvname>
                    <process>true</process>
                </configure>
            </link>
        </value>
    </linkArray>

</record>

<record name = "aiRaw" type = "int">
    <linkArray>
        <value structureName = "linkArrayElement">
            <wait>true</wait>
            <link  supportName = "processLink" >
                <configure structureName = "processLink">
                    <pvname>ai</pvname>
                </configure>
            </link>
        </value>
   </linkArray>
</record>

<record name = "ai" type = "aiDouble" >
    <input>
        <linearConvert>
            <deviceHigh>2047</deviceHigh>
            <deviceLow>-2048</deviceLow>
            <engUnitsLow>0.0</engUnitsLow>
            <engUnitsHigh>10.0</engUnitsHigh>
        </linearConvert>
        <input supportName = "inputLink" >
            <configure structureName = "inputLink">
                <pvname>aiRaw</pvname>
                <process>false</process>
            </configure>
        </input>

    </input>
    <valueAlarm>
        <configure structureName = "doubleAlarm">
          <active>true</active>
          <interval>
              <value structureName = "doubleAlarmInterval">
                  <value>2.0</value>
                  <severity>major</severity>
              </value>
              <value structureName = "doubleAlarmInterval">
                  <value>4.0</value>
                  <severity>minor</severity>
              </value>
              <value structureName = "doubleAlarmInterval">
                  <value>6.0</value>
                  <severity>none</severity>
              </value>
              <value structureName = "doubleAlarmInterval">
                  <value>8.0</value>
                  <severity>minor</severity>
              </value>
              <value structureName = "doubleAlarmInterval">
                  <value>10.0</value>
                  <severity>major</severity>
              </value>
          </interval>
          <outOfRange>invalid</outOfRange>
          <hystersis>0.1</hystersis>
        </configure>
    </valueAlarm>
    <displayLimit>
        <low>0.0</low>
        <high>10.0</high>
    </displayLimit>
</record>


</IOCDatabase>
