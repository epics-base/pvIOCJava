<?xml version="1.0" ?>
<database>
<record name = "${checkRecord}Check" >
    <scalar name = "value" type = "boolean" />
    <structure name = "alarm" type = "alarm" />
    <structure name = "timeStamp" type = "timeStamp" />
    <structure name = "input" type = "calculation" >
       <structure name = "calcArgs">
          <structure name = "a">
            <scalar name = "value" type = "${checkType}" />
          </structure>
          <structure name = "b">
            <scalar name = "value" type = "${checkType}" >${checkValue}</scalar>
          </structure>
       </structure>
       <structure name = "calculator">
         <scalar name = "expression">
            (Math.abs(Math.max(a,b))>1e-5) ?
            ((Math.abs(a-b)/Math.abs(Math.max(a,b)))&lt;1e-5 ? true : false)
            : true
         </scalar>
       </structure>
    </structure>
    <structure name = "valueAlarm" type = "booleanAlarm" >
       <scalar name = "active">true</scalar>
       <scalar name = "falseMessage">checkExpression Failure</scalar>
       <structure name ="falseAlarm"><scalar name = "choice">major</scalar></structure>
    </structure>
</record>
</database>
