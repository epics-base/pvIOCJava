<substitute fromTo = "checkRecord=calcExample,checkType=Double,checkValue=18.0" />
<record name = "${checkRecord}" type = "calc${checkType}">
    <alarm structureName = "alarm" />
    <timeStamp structureName = "timeStamp" />
    <scan>
        <processAfterStart>true</processAfterStart>
    </scan>
    <calcArgArray>
        <element structureName = "calcDoubleArg">
            <value>1.0</value>
            <name>a</name>
        </element>
        <element structureName = "calcDoubleArg">
            <value>2.0</value>
            <name>b</name>
        </element>
        <element structureName = "calcDoubleArg">
            <value>3.0</value>
            <name>c</name>
        </element>
        <element structureName = "calcDoubleArg">
            <value>4.0</value>
            <name>d</name>
        </element>
        <element structureName = "calcDoubleArg">
            <value>2.0</value>
            <name>e</name>
        </element>
    </calcArgArray>
    <calculator structureName = "expressionCalculator" >
        <expression>
            Math.abs(-(a + b*c + d*e + 3.0))
        </expression>
    </calculator>
<include href = "checkLink.xml" />
</record>
<include href = "checkReal.xml" />

<record name = "calcSimpleCounter" type = "calcInt">
    <alarm structureName = "alarm" />
    <timeStamp structureName = "timeStamp" />
    <calculator structureName = "expressionCalculator" >
        <expression>value+1&lt;=10?value+1:0</expression>
    </calculator>
    <scan>
        <type><choice>periodic</choice></type>
        <rate>1.0</rate>
    </scan>
</record>

<record name = "calcCounter" type = "calcDouble">
    <alarm structureName = "alarm" />
    <timeStamp structureName = "timeStamp" />
    <calcArgArray>
        <element structureName = "calcDoubleArg">
            <value>0.0</value>
            <name>min</name>
        </element>
        <element structureName = "calcDoubleArg">
            <value>10.0</value>
            <name>max</name>
        </element>
        <element structureName = "calcDoubleArg">
            <value>0.5</value>
            <name>inc</name>
        </element>
    </calcArgArray>
    <calculator structureName = "expressionCalculator" >
        <expression>((value+inc)&lt;=max)?(value+inc):min</expression>
    </calculator>
    <scan>
        <type><choice>periodic</choice></type>
        <rate>1.0</rate>
    </scan>
</record>
