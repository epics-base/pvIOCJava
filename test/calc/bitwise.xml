<?xml version="1.0" ?>
<database>


<substitute fromTo = "checkRecord=bitwiseByte,checkType=byte,checkValue=0x44" />
<record name = "${checkRecord}" >
    <scalar name = "value" type = "${checkType}" />
    <structure name = "alarm" type = "alarm" />
    <structure name = "timeStamp" type = "timeStamp" />
    <structure name = "input" type = "calculation" >
       <structure name = "calcArgs">
          <structure name = "a">
            <scalar name = "value" type = "byte" >0xff</scalar>
          </structure>
          <structure name = "b">
            <scalar name = "value" type = "byte" >0xaa</scalar>
          </structure>
          <structure name = "c">
            <scalar name = "value" type = "byte" >0x11</scalar>
          </structure>
       </structure>
       <structure name = "calculator">
         <scalar name = "expression">
             ~(a&amp;b|c)
         </scalar>
       </structure>
    </structure>
    <structure name = "scan" type = "scan">
        <structure name = "type"><scalar name = "choice">periodic</scalar></structure>
        <scalar name = "processAfterStart">true</scalar>
    </structure>
    <include href = "checkLink.xml" />
</record>
<include href = "checkInteger.xml" />

