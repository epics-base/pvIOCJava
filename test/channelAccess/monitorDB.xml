<?xml version="1.0" ?>
<IOCDatabase>

<record name = "monitorCounter" type = "calcDouble">
    <calcArgArray>
        <value structureName = "calcDoubleArg">
            <value>0.0</value>
            <name>min</name>
        </value>
        <value structureName = "calcDoubleArg">
            <value>20.0</value>
            <name>max</name>
        </value>
        <value structureName = "calcDoubleArg">
            <value>1.0</value>
            <name>inc</name>
        </value>
    </calcArgArray>
    <calculator supportName = "counterCalculator" />
    <valueAlarm structureName = "doubleAlarm">
          <active>true</active>
          <interval>
              <value structureName = "doubleAlarmInterval">
                  <value>2.0</value>
                  <severity><choice>major</choice></severity>
              </value>
              <value structureName = "doubleAlarmInterval">
                  <value>5.0</value>
                  <severity><choice>minor</choice></severity>
              </value>
              <value structureName = "doubleAlarmInterval">
                  <value>14.0</value>
                  <severity><choice>none</choice></severity>
              </value>
              <value structureName = "doubleAlarmInterval">
                  <value>17.0</value>
                  <severity><choice>minor</choice></severity>
              </value>
              <value structureName = "doubleAlarmInterval">
                  <value>20.0</value>
                  <severity><choice>major</choice></severity>
              </value>
          </interval>
          <outOfRange><choice>invalid</choice></outOfRange>
          <hystersis>0.1</hystersis>
    </valueAlarm>
    <scan>
        <type><choice>periodic</choice></type>
        <rate>2.0</rate>
    </scan>
</record>

<record name = "monitorPut" type = "double">
    <input supportName = "monitorSupport" structureName = "monitorSupport">
            <pvname>monitorCounter</pvname>
            <type><choice>put</choice></type>
            <process>true</process>
            <inheritSeverity>true</inheritSeverity>
    </input>
    <supportArray>
        <value structureName = "supportArrayElement">
            <wait>true</wait>
            <link  supportName = "outputSupport" structureName = "outputSupport">
                    <pvname>cachePut</pvname>
                    <process>true</process>
            </link>
        </value>
<!-- do it twice fails WHY
        <value structureName = "supportArrayElement">
            <wait>true</wait>
            <link  supportName = "outputSupport" structureName = "outputSupport">
                    <pvname>cachePut</pvname>
                    <process>true</process>
            </link>
        </value>
-->
        <value structureName = "supportArrayElement">
            <link  supportName = "delaySupport" structureName = "delaySupport">
                    <min>100</min>
                    <max>1000</max>
                    <inc>100</inc>
            </link>
        </value>
    </supportArray>
</record>

<record name = "cachePut" type = "double">
    <scan>
        <processSelf>true</processSelf> 
    </scan>
</record>


