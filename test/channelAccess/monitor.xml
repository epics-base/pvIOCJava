<?xml version="1.0" ?>
<IOCDatabase>

<record name = "monitorCounter">
    <value type = "double"/>
    <alarm structureName = "alarm" />
    <timeStamp structureName = "timeStamp" />
    <input structureName = "calculation" >
      <calcArgArray>
        <element structureName = "calcArg">
            <value type = "double">0.0</value>
            <name>min</name>
        </element>
        <element structureName = "calcArg">
            <value type = "double">20.0</value>
            <name>max</name>
        </element>
        <element structureName = "calcArg">
            <value type = "double">1.0</value>
            <name>inc</name>
        </element>
      </calcArgArray>
      <calculator structureName = "expressionCalculator" >
        <expression>((value+inc)&lt;=max)?(value+inc):min</expression>
      </calculator>
    </input>
    <valueAlarm structureName = "doubleAlarm">
          <active>true</active>
          <interval>
              <element structureName = "doubleAlarmInterval">
                  <value>2.0</value>
                  <severity><choice>major</choice></severity>
                  <message>LOWLOW</message>
              </element>
              <element structureName = "doubleAlarmInterval">
                  <value>5.0</value>
                  <severity><choice>minor</choice></severity>
                  <message>LOW</message>
              </element>
              <element structureName = "doubleAlarmInterval">
                  <value>14.0</value>
                  <severity><choice>none</choice></severity>
              </element>
              <element structureName = "doubleAlarmInterval">
                  <value>17.0</value>
                  <severity><choice>minor</choice></severity>
                  <message>HIGH</message>
              </element>
              <element structureName = "doubleAlarmInterval">
                  <value>20.0</value>
                  <severity><choice>major</choice></severity>
                  <message>HIGHHIGH</message>
              </element>
          </interval>
          <outOfRange><choice>invalid</choice></outOfRange>
          <hystersis>0.1</hystersis>
    </valueAlarm>
    <scan structureName = "scan">
        <type><choice>periodic</choice></type>
        <rate>1.0</rate>
    </scan>
</record>

<record name = "monitorPut">
    <value type = "double"/>
    <alarm structureName = "alarm" />
    <timeStamp structureName = "timeStamp" />
    <input supportName = "monitorSupport" structureName = "monitorSupport">
            <pvname>monitorCounter</pvname>
            <type><choice>put</choice></type>
            <process>true</process>
            <propertyNames>alarm</propertyNames>
    </input>
    <supportArray elementType = "structure" supportName = "supportArray" >
        <element structureName = "supportArrayElement">
            <wait>true</wait>
            <link  supportName = "outputSupport" structureName = "outputSupport">
                    <pvname>cachePut</pvname>
                    <process>true</process>
            </link>
        </element>
        <element structureName = "supportArrayElement">
            <link  supportName = "delay" structureName = "delay">
                    <min>100</min>
                    <max>1000</max>
                    <inc>100</inc>
            </link>
        </element>
    </supportArray>
</record>

<record name = "cachePut">
    <value type = "double"/>
    <alarm structureName = "alarm" />
    <timeStamp structureName = "timeStamp" />
    <scan structureName = "scan" >
        <processSelf>true</processSelf> 
    </scan>
</record>

<record name = "monitorChange">
    <value type = "double"/>
    <alarm structureName = "alarm" />
    <timeStamp structureName = "timeStamp" />
    <input supportName = "monitorSupport" structureName = "monitorSupport">
            <pvname>cachePut</pvname>
            <type><choice>change</choice></type>
            <process>true</process>
            <propertyNames>alarm</propertyNames>
    </input>
    <supportArray elementType = "structure" supportName = "supportArray" >
        <element structureName = "supportArrayElement">
            <link  supportName = "delay" structureName = "delay">
                    <min>100</min>
                    <max>1000</max>
                    <inc>100</inc>
            </link>
        </element>
    </supportArray>
</record>

<record name = "monitorAbsoluteChange">
    <value type = "double"/>
    <alarm structureName = "alarm" />
    <timeStamp structureName = "timeStamp" />
    <input supportName = "monitorSupport" structureName = "monitorSupport">
            <pvname>monitorCounter</pvname>
            <type><choice>absoluteChange</choice></type>
            <deadband>1.001</deadband>
            <process>true</process>
            <propertyNames>alarm</propertyNames>
    </input>
    <supportArray elementType = "structure" supportName = "supportArray" >
        <element structureName = "supportArrayElement">
            <link  supportName = "delay" structureName = "delay">
                    <min>100</min>
                    <max>1000</max>
                    <inc>100</inc>
            </link>
        </element>
    </supportArray>
</record>

<record name = "monitorPercentageChange">
    <value type = "double"/>
    <alarm structureName = "alarm" />
    <timeStamp structureName = "timeStamp" />
    <input supportName = "monitorSupport" structureName = "monitorSupport">
            <pvname>monitorCounter</pvname>
            <type><choice>percentageChange</choice></type>
            <deadband>20.0</deadband>
            <process>true</process>
            <propertyNames>alarm</propertyNames>
    </input>
    <supportArray elementType = "structure" supportName = "supportArray" >
        <element structureName = "supportArrayElement">
            <link  supportName = "delay" structureName = "delay">
                    <min>100</min>
                    <max>1000</max>
                    <inc>100</inc>
            </link>
        </element>
    </supportArray>
</record>

<record name = "notifyPut">
    <value type = "double"/>
    <alarm structureName = "alarm" />
    <timeStamp structureName = "timeStamp" />
    <input supportName = "monitorNotifySupport" structureName = "monitorNotifySupport">
            <pvname>monitorCounter</pvname>
    </input>
    <supportArray elementType = "structure" supportName = "supportArray" >
        <element structureName = "supportArrayElement">
            <link  supportName = "inputSupport" structureName = "inputSupport">
                    <pvname>monitorCounter</pvname>
                    <process>false</process>
            </link>
        </element>
        <element structureName = "supportArrayElement">
            <link  supportName = "delay" structureName = "delay">
                    <min>100</min>
                    <max>1000</max>
                    <inc>100</inc>
            </link>
        </element>
    </supportArray>
</record>

</IOCDatabase>
