<?xml version="1.0" ?>
<database>

<record name = "syncStringDriver" type = "portCreate">
    <scalar name = "factoryName">org.epics.ioc.pdrv.testDriver.OctetDriverFactory</scalar>
    <scalar name = "portName">syncOctetPort</scalar>
    <structure name = "driverParameters" type = "octetDriver" >
        <scalar name = "delay">0.0</scalar>
    </structure>
</record>

<record name = "stringCounter">
    <scalar name = "value" type = "byte"/>
    <structure name = "alarm" type = "alarm" />
    <structure name = "timeStamp" type = "timeStamp" />
    <structure name = "input" type = "calculation" >
      <structure name = "calculator">
        <scalar name ="expression">(value+1&lt;=10)?(value+1):0</scalar>
      </structure>
    </structure>
     <structure name = "scan" type = "scan">
        <structure name = "type"><scalar name = "choice">periodic</scalar></structure>
        <scalar name = "rate">1.0</scalar>
    </structure>
    <structure name = "link" type = "generic" >
        <structure name = "1" type = "outputSupport">
            <scalar name = "wait" type = "boolean" >true</scalar>
            <scalar name = "pvname">stringOut</scalar>
            <scalar name = "process">true</scalar>
        </structure>
        <structure name = "2" type = "processSupport">
            <scalar name = "wait" type = "boolean" >false</scalar>
            <scalar name = "pvname">stringIn</scalar>
        </structure>
    </structure>
</record>


<record name = "stringOut">
    <scalar name = "value" type = "string"/>
    <structure name = "timeStamp" type = "timeStamp" />
    <structure name = "output" type = "pdrvSupport">
        <auxInfo name = "supportFactory" type = "string">pdrvOctetOutputFactory</auxInfo>
        <scalar name = "portName">syncOctetPort</scalar>
        <scalar name = "deviceName">0</scalar>
        <scalar name = "timeout">.2</scalar>
    </structure>
</record>

<record name = "stringIn">
    <scalar name = "value" type = "string"/>
    <structure name = "timeStamp" type = "timeStamp" />
    <structure name = "input" type = "pdrvSupport">
        <auxInfo name = "supportFactory" type = "string">pdrvOctetInputFactory</auxInfo>
        <scalar name = "portName">syncOctetPort</scalar>
        <scalar name = "deviceName">0</scalar>
        <scalar name = "timeout">.2</scalar>
        <scalar name = "size" >20</scalar>
    </structure>
</record>


</database>
