<?xml version="1.0" ?>
<IOCDatabase>

<record name = "syncStringDriver" structureName = "portCreate">
    <factoryName>org.epics.ioc.pdrv.testDriver.OctetDriverFactory</factoryName>
    <portName>syncOctetDriver</portName>
    <driverParameters structureName = "octetDriver" >
        <multiDevice>true</multiDevice>
        <delay>0.0</delay>
    </driverParameters>
</record>

<record name = "stringCounter">
    <value type = "byte"/>
    <alarm structureName = "alarm" />
    <timeStamp structureName = "timeStamp" />
    <input structureName = "calculation" >
      <calculator structureName = "expressionCalculator" >
        <expression>(value+1&lt;=10)?(value+1):0</expression>
      </calculator>
    </input>
    <scan structureName = "scan" >
        <type><choice>periodic</choice></type> 
        <rate>1.0</rate>
    </scan>
    <supportArray elementType = "structure" supportName = "supportArray" >
        <element structureName = "supportArrayElement">
            <wait>false</wait>
            <link  supportName = "outputSupport" structureName = "outputSupport">
                    <pvname>stringOut</pvname>
                    <process>true</process>
            </link>
        </element>
        <element structureName = "supportArrayElement">
            <wait>true</wait>
            <link  supportName = "processSupport" structureName = "processSupport">
                    <pvname>stringIn</pvname>
            </link>
        </element>
    </supportArray>
</record>

<record name = "stringOut">
    <value type = "string"/>
    <timeStamp structureName = "timeStamp" />
    <output supportName = "pdrvOctetOutput" structureName = "pdrvSupport">
            <portName>syncOctetDriver</portName>
            <addr>0</addr>
            <timeout>.1</timeout>
    </output>
</record>

<record name = "stringIn">
    <value type = "string"/>
    <timeStamp structureName = "timeStamp" />
    <input supportName = "pdrvOctetInput" structureName = "pdrvSupport">
            <portName>syncOctetDriver</portName>
            <addr>0</addr>
            <timeout>.1</timeout>
            <size>20</size>
    </input>
</record>


</IOCDatabase>
