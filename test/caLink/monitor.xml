<?xml version="1.0" ?>
<database>

<record name = "monitorCounter">
    <scalar name = "value" type = "double"/>
    <structure name = "alarm" type = "alarm" />
    <structure name = "timeStamp" type = "timeStamp" />
    <structure name = "scan" type = "scan">
        <structure name = "type"><scalar name = "choice">periodic</scalar></structure>
        <scalar name = "rate">1.0</scalar>
    </structure>
    <structure name = "input" type = "calculation" >
      <structure name = "calculator">
        <scalar name ="expression">(value+1)&lt;=20.0 ? value+1 : 0.0</scalar>
      </structure>
    </structure>
    <structure name = "valueAlarm" type = "doubleAlarm">
          <scalar name = "active">true</scalar>
          <structure name = "interval">
              <structure name = "0" type = "doubleAlarmInterval">
                  <scalar name = "value">2</scalar>
                  <structure name = "severity"><scalar name = "choice">major</scalar></structure>
                  <scalar name = "message">LOWLOW</scalar>
              </structure>
              <structure name = "1" type = "doubleAlarmInterval">
                  <scalar name = "value">4</scalar>
                  <structure name = "severity"><scalar name = "choice">minor</scalar></structure>
                  <scalar name = "message">LOW</scalar>
              </structure>
              <structure name = "2" type = "doubleAlarmInterval">
                  <scalar name = "value">6</scalar>
                  <structure name = "severity"><scalar name = "choice">none</scalar></structure>
                  <scalar name = "message">none</scalar>
              </structure>
              <structure name = "3" type = "doubleAlarmInterval">
                  <scalar name = "value">8</scalar>
                  <structure name = "severity"><scalar name = "choice">minor</scalar></structure>
                  <scalar name = "message">HIGH</scalar>
              </structure>
              <structure name = "4" type = "doubleAlarmInterval">
                  <scalar name = "value">18</scalar>
                  <structure name = "severity"><scalar name = "choice">major</scalar></structure>
                  <scalar name = "message">HIGHHIGH</scalar>
              </structure>
          </structure>
          <structure name ="outOfRange"><scalar name = "choice">invalid</scalar></structure>
          <scalar name = "hystersis">0.1</scalar>
    </structure> 
</record>

<record name = "monitorPut">
    <scalar name = "value" type = "double"/>
    <structure name = "alarm" type = "alarm" />
    <structure name = "timeStamp" type = "timeStamp" />
    <structure name = "input" type = "caMonitorLink">
        <scalar name = "pvname">monitorCounter</scalar>
        <structure name = "type"><scalar name = "choice">put</scalar></structure>
        <scalar name = "process">true</scalar>
        <scalar name = "propertyNames">alarm</scalar>
    </structure>
    <structure name = "link" type = "caOutputLink">
        <scalar name = "pvname">cachePut</scalar>
        <scalar name = "process">true</scalar>
    </structure>
</record>

<record name = "cachePut">
    <scalar name = "value" type = "double"/>
    <structure name = "alarm" type = "alarm" />
    <structure name = "timeStamp" type = "timeStamp" />
    <structure name = "scan" type = "scan">
        <scalar name = "processSelf">true</scalar>
    </structure>
</record>

<record name = "monitorChange">
    <scalar name = "value" type = "double"/>
    <structure name = "alarm" type = "alarm" />
    <structure name = "timeStamp" type = "timeStamp" />
    <structure name = "input" type = "caMonitorLink">
        <scalar name = "pvname">monitorCounter</scalar>
        <structure name = "type"><scalar name = "choice">change</scalar></structure>
        <scalar name = "process">true</scalar>
        <scalar name = "propertyNames">alarm</scalar>
    </structure>
</record>

<record name = "monitorAbsoluteChange">
    <scalar name = "value" type = "double"/>
    <structure name = "alarm" type = "alarm" />
    <structure name = "timeStamp" type = "timeStamp" />
    <structure name = "input" type = "caMonitorLink">
        <scalar name = "pvname">monitorCounter</scalar>
        <structure name = "type"><scalar name = "choice">absoluteChange</scalar></structure>
        <scalar name = "deadband">1.001</scalar>
        <scalar name = "process">true</scalar>
        <scalar name = "propertyNames">alarm</scalar>
    </structure>
</record>

<record name = "monitorPercentageChange">
    <scalar name = "value" type = "double"/>
    <structure name = "alarm" type = "alarm" />
    <structure name = "timeStamp" type = "timeStamp" />
    <structure name = "input" type = "caMonitorLink">
        <scalar name = "pvname">monitorCounter</scalar>
        <structure name = "type"><scalar name = "choice">percentageChange</scalar></structure>
        <scalar name = "deadband">20.0</scalar>
        <scalar name = "process">true</scalar>
        <scalar name = "propertyNames">alarm</scalar>
    </structure>
</record>

<record name = "notifyPut">
    <scalar name = "value" type = "double"/>
    <structure name = "alarm" type = "alarm" />
    <structure name = "timeStamp" type = "timeStamp" />
    <structure name = "notify" type = "caMonitorNotifyLink">
        <scalar name = "pvname">monitorCounter</scalar>
    </structure>
    <structure name = "input" type = "caInputLink">
        <scalar name = "pvname">monitorCounter</scalar>
        <scalar name = "process">false</scalar>
        <scalar name = "propertyNames">alarm</scalar>
    </structure>
</record>

<!-- really simple monitor -->
<record name = "caMonitor" type = "caMonitorLink">
    <structure name = "alarm" type = "alarm" />
    <structure name = "timeStamp" type = "timeStamp" />
    <scalar name = "value" type = "double" />
    <scalar name = "pvname">monitorCounter</scalar>
    <scalar name = "process">true</scalar>
    <scalar name = "propertyNames">alarm</scalar>
</record>

</database>
