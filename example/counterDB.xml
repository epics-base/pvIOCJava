<?xml version="1.0" ?>
<IOCDatabase>
<record name = "counter" type = "calcDouble">
    <alarm structureName = "alarm" />
    <timeStamp structureName = "timeStamp" />
    <calcArgArray>
        <value structureName = "calcDoubleArg">
            <value>0.0</value>
            <name>min</name>
        </value>
        <value structureName = "calcDoubleArg">
            <value>10.0</value>
            <name>max</name>
        </value>
        <value structureName = "calcDoubleArg">
            <value>0.5</value>
            <name>inc</name>
        </value>
    </calcArgArray>
    <calculator supportName = "counterCalculator" />
    <supportArray>
        <value structureName = "supportArrayElement">
            <wait>false</wait>
            <link  supportName = "outputSupport" structureName = "outputSupport">
                <pvname>counterOutput</pvname>
                <process>true</process>
            </link>
        </value>
        <value structureName = "supportArrayElement">
            <wait>true</wait>
            <link  supportName = "processSupport"  structureName = "processSupport">
                <pvname>counterInput</pvname>
            </link>
        </value>
    </supportArray>
    <scan>
        <type><choice>periodic</choice></type>
<!--
-->
        <rate>1.0</rate>
    </scan>
</record>

<record name = "counterOutput" type = "double">
    <alarm structureName = "alarm" />
    <timeStamp structureName = "timeStamp" />
    <valueAlarm structureName = "doubleAlarm">
          <active>true</active>
          <interval>
              <value structureName = "doubleAlarmInterval">
                  <value>2.0</value>
                  <severity><choice>major</choice></severity>
                  <message>LOWLOW</message>
              </value>
              <value structureName = "doubleAlarmInterval">
                  <value>4.0</value>
                  <severity><choice>minor</choice></severity>
                  <message>LOW</message>
              </value>
              <value structureName = "doubleAlarmInterval">
                  <value>6.0</value>
                  <severity><choice>none</choice></severity>
              </value>
              <value structureName = "doubleAlarmInterval">
                  <value>8.0</value>
                  <severity><choice>minor</choice></severity>
                  <message>HIGH</message>
              </value>
              <value structureName = "doubleAlarmInterval">
                  <value>10.0</value>
                  <severity><choice>major</choice></severity>
                  <message>HIHI</message>
              </value>
          </interval>
          <outOfRange><choice>invalid</choice></outOfRange>
          <hystersis>0.1</hystersis>
    </valueAlarm>
    <display structureName = "display" >
        <description>Sample Description</description>
        <format>%f</format>
        <resolution>1</resolution>
        <units>volts</units>
        <limit>
            <low>0.0</low>
            <high>10.0</high>
        </limit>
    </display>
    <control structureName = "control" >
        <limit>
            <low>0.0</low>
            <high>10.0</high>
        </limit>
        <minStep>.1</minStep>
    </control>
</record>

<record name = "counterInput" type = "double">
    <alarm structureName = "alarm" />
    <timeStamp structureName = "timeStamp" />
    <display structureName = "display" />
    <control structureName = "control" />
    <input supportName = "inputSupport" structureName = "inputSupport">
        <pvname>counterOutput</pvname>
        <process>false</process>
        <propertyNames>alarm,display,control</propertyNames>
    </input>
</record>

<record name = "counterMonitor" type = "double">
    <alarm structureName = "alarm" />
    <timeStamp structureName = "timeStamp" />
    <display structureName = "display" />
    <control structureName = "control" />
    <input supportName = "monitorSupport" structureName = "monitorSupport">
        <pvname>counterOutput</pvname>
        <process>true</process>
        <propertyNames>alarm,display,control</propertyNames>
    </input>
</record>

</IOCDatabase>
