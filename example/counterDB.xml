<?xml version="1.0" ?>
<IOCDatabase>
<record name = "counter">
    <scan structureName = "scan">
        <type><choice>periodic</choice></type>
        <rate>1.0</rate>
    </scan>
    <alarm structureName = "alarm" />
    <timeStamp structureName = "timeStamp" />
    <value type = "double" />
    <input structureName = "calculation" >
      <calcArgArray>
        <element structureName = "calcArg">
            <value type = "double" >0.0</value>
            <name>min</name>
        </element>
        <element structureName = "calcArg">
            <value type = "double" >10.0</value>
            <name>max</name>
        </element>
        <element structureName = "calcArg">
            <value type = "double">0.5</value>
            <name>inc</name>
        </element>
      </calcArgArray>
      <calculator>
        <expression>(value+inc)&lt;=max ? value+inc : min</expression>
      </calculator>
    </input>
    <supportArray elementType = "structure" supportName = "supportArray" >
        <element structureName = "supportArrayElement">
            <wait>false</wait>
            <link structureName = "outputSupport">
                <pvname>counterOutput</pvname>
                <process>true</process>
            </link>
        </element>
        <element structureName = "supportArrayElement">
            <wait>true</wait>
            <link structureName = "processSupport">
                <pvname>counterInput</pvname>
            </link>
        </element>
    </supportArray>
</record>

<record name = "counterOutput" >
    <alarm structureName = "alarm" />
    <timeStamp structureName = "timeStamp" />
    <value type = "double" />
    <valueAlarm structureName = "doubleAlarm">
          <active>true</active>
          <interval>
              <element structureName = "doubleAlarmInterval">
                  <value>2.0</value>
                  <severity><choice>major</choice></severity>
                  <message>LOWLOW</message>
              </element>
              <element structureName = "doubleAlarmInterval">
                  <value>4.0</value>
                  <severity><choice>minor</choice></severity>
                  <message>LOW</message>
              </element>
              <element structureName = "doubleAlarmInterval">
                  <value>6.0</value>
                  <severity><choice>none</choice></severity>
              </element>
              <element structureName = "doubleAlarmInterval">
                  <value>8.0</value>
                  <severity><choice>minor</choice></severity>
                  <message>HIGH</message>
              </element>
              <element structureName = "doubleAlarmInterval">
                  <value>10.0</value>
                  <severity><choice>major</choice></severity>
                  <message>HIHI</message>
              </element>
          </interval>
          <outOfRange><choice>invalid</choice></outOfRange>
          <hystersis>0.1</hystersis>
    </valueAlarm>
    <display structureName = "display" >
        <description>Sample Description</description>
        <format>%f</format>
        <resolution>1</resolution>
        <units>volts</units>
        <limit>
            <low>0.0</low>
            <high>10.0</high>
        </limit>
    </display>
    <control structureName = "control" >
        <limit>
            <low>0.0</low>
            <high>10.0</high>
        </limit>
        <minStep>.1</minStep>
    </control>
</record>

<record name = "counterInput">
    <alarm structureName = "alarm" />
    <timeStamp structureName = "timeStamp" />
    <value type = "double" />
    <display structureName = "display" />
    <control structureName = "control" />
    <input structureName = "inputSupport">
        <pvname>counterOutput</pvname>
        <process>false</process>
        <propertyNames>alarm,display,control</propertyNames>
    </input>
</record>

<record name = "counterMonitor">
    <alarm structureName = "alarm" />
    <timeStamp structureName = "timeStamp" />
    <value type = "double" />
    <display structureName = "display" />
    <control structureName = "control" />
    <input structureName = "monitorSupport">
        <pvname>counterOutput</pvname>
        <process>true</process>
        <propertyNames>alarm,display,control</propertyNames>
    </input>
</record>

<record name = "counterDouble">
    <value type = "double"/>
    <alarm structureName = "alarm" />
    <timeStamp structureName = "timeStamp" />
    <input structureName = "calculation" >
      <calcArgArray>
        <element structureName = "calcArg">
            <value type = "double" />
            <name>arg0</name>
            <alarm structureName = "alarm" />
            <input structureName = "monitorSupport">
              <pvname>counterOutput</pvname>
              <process>true</process>
              <propertyNames>alarm</propertyNames>
             </input>
        </element>
        <element structureName = "calcArg">
            <value type = "double" />
            <name>arg1</name>
            <input supportName = "inputSupport"
                   structureName = "inputSupport">
               <pvname>counterOutput</pvname>
            </input>
        </element>
      </calcArgArray>
      <calculator structureName = "expressionCalculator" >
        <expression>arg0+arg1</expression>
      </calculator>
    </input>
</record>

</IOCDatabase>
