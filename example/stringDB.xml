<?xml version="1.0" ?>
<IOCDatabase>

<record name = "syncStringDriver" type = "portCreate">
    <factoryName>org.epics.ioc.pdrv.testDriver.OctetDriverFactory</factoryName>
    <portName>syncOctetDriver</portName>
    <driverParameters structureName = "octetDriver" >
        <multiDevice>true</multiDevice>
        <delay>0.0</delay>
    </driverParameters>
</record>

<record name = "stringCounter" type = "calcDouble">
    <timeStamp structureName = "timeStamp" />
    <alarm structureName = "alarm" />
    <calcArgArray>
        <value structureName = "calcDoubleArg">
            <value>0.0</value>
            <name>min</name>
        </value>
        <value structureName = "calcDoubleArg">
            <value>10.0</value>
            <name>max</name>
        </value>
        <value structureName = "calcDoubleArg">
            <value>1.0</value>
            <name>inc</name>
        </value>
    </calcArgArray>
    <calculator supportName = "counterCalculator" />
    <valueAlarm structureName = "doubleAlarm">
          <active>true</active>
          <interval>
              <value structureName = "doubleAlarmInterval">
                  <value>2.0</value>
                  <severity><choice>major</choice></severity>
              </value>
              <value structureName = "doubleAlarmInterval">
                  <value>4.0</value>
                  <severity><choice>minor</choice></severity>
              </value>
              <value structureName = "doubleAlarmInterval">
                  <value>6.0</value>
                  <severity><choice>none</choice></severity>
              </value>
              <value structureName = "doubleAlarmInterval">
                  <value>8.0</value>
                  <severity><choice>minor</choice></severity>
              </value>
              <value structureName = "doubleAlarmInterval">
                  <value>10.0</value>
                  <severity><choice>major</choice></severity>
              </value>
          </interval>
          <outOfRange><choice>invalid</choice></outOfRange>
          <hystersis>0.1</hystersis>
    </valueAlarm>
    <display structureName = "display" >
        <units>volts</units>
        <limit>
            <low>0.0</low>
            <high>10.0</high>
        </limit>
    </display>
    <scan>
        <type><choice>periodic</choice></type>
        <rate>1.0</rate>
    </scan>
    <supportArray>
        <value structureName = "supportArrayElement">
            <wait>false</wait>
            <link  supportName = "outputSupport" structureName = "outputSupport">
                    <pvname>stringOut</pvname>
                    <process>true</process>
            </link>
        </value>
    </supportArray>
</record>

<record name = "stringOut" type = "string">
    <timeStamp structureName = "timeStamp" />
    <output supportName = "pdrvOctetOutput" structureName = "pdrvSupport">
            <portName>syncOctetDriver</portName>
            <addr>0</addr>
            <timeout>.1</timeout>
    </output>
    <supportArray>
        <value structureName = "supportArrayElement">
            <wait>false</wait>
            <link  supportName = "processSupport" structureName = "processSupport">
                    <pvname>stringIn</pvname>
            </link>
        </value>
    </supportArray>
</record>

<record name = "stringIn" type = "string">
    <timeStamp structureName = "timeStamp" />
    <input supportName = "pdrvOctetInput" structureName = "pdrvSupport">
            <portName>syncOctetDriver</portName>
            <addr>0</addr>
            <timeout>.1</timeout>
            <size>20</size>
    </input>
</record>


</IOCDatabase>
