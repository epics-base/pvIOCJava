<?xml version="1.0" ?>
<IOCDatabase>

<record name = "syncStringDriver" type = "portCreate">
    <factoryName>org.epics.ioc.pdrv.testDriver.OctetDriverFactory</factoryName>
    <portName>syncOctetDriver</portName>
    <driverParameters structureName = "octetDriver" >
        <multiDevice>true</multiDevice>
        <delay>0.0</delay>
    </driverParameters>
</record>

<record name = "stringCounter" type = "calcDouble">
    <timeStamp structureName = "timeStamp" />
    <alarm structureName = "alarm" />
    <calcArgArray>
        <element structureName = "calcDoubleArg">
            <value>0.0</value>
            <name>min</name>
        </element>
        <element structureName = "calcDoubleArg">
            <value>10.0</value>
            <name>max</name>
        </element>
        <element structureName = "calcDoubleArg">
            <value>1.0</value>
            <name>inc</name>
        </element>
    </calcArgArray>
    <calculator supportName = "counterCalculator" />
    <scan>
        <type><choice>periodic</choice></type>
        <rate>1.0</rate>
    </scan>
    <supportArray>
        <element structureName = "supportArrayElement">
            <wait>false</wait>
            <link  supportName = "outputSupport" structureName = "outputSupport">
                    <pvname>stringOut</pvname>
                    <process>true</process>
            </link>
        </element>
        <element structureName = "supportArrayElement">
            <wait>true</wait>
            <link  supportName = "processSupport" structureName = "processSupport">
                    <pvname>stringIn</pvname>
            </link>
        </element>
    </supportArray>
</record>

<record name = "stringOut" type = "string">
    <timeStamp structureName = "timeStamp" />
    <output supportName = "pdrvOctetOutput" structureName = "pdrvSupport">
            <portName>syncOctetDriver</portName>
            <addr>0</addr>
            <timeout>.1</timeout>
    </output>
</record>

<record name = "stringIn" type = "string">
    <timeStamp structureName = "timeStamp" />
    <input supportName = "pdrvOctetInput" structureName = "pdrvSupport">
            <portName>syncOctetDriver</portName>
            <addr>0</addr>
            <timeout>.1</timeout>
            <size>20</size>
    </input>
</record>


</IOCDatabase>
