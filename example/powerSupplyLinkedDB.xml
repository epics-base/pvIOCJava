<?xml version="1.0" ?>
<IOCDatabase>

<record name = "adcVoltageSupported" type = "int">
    <supportArray>
        <value structureName = "supportArrayElement">
            <wait>true</wait>
            <link  supportName = "processSupport" structureName = "processSupport">
                <pvname>voltage</pvname>
            </link>
        </value>
   </supportArray>
</record>

<record name = "voltage" type = "double" >
    <input structureName = "linearConvertInput">
        <linearConvert>
            <deviceHigh>4095</deviceHigh>
            <deviceLow>0</deviceLow>
            <engUnitsLow>0.0</engUnitsLow>
            <engUnitsHigh>10.0</engUnitsHigh>
        </linearConvert>
        <input supportName = "inputSupport" structureName = "inputSupport">
                <pvname>adcVoltageSupported</pvname>
                <process>false</process>
        </input>

    </input>  
    <valueAlarm structureName = "doubleAlarm">
          <active>true</active>
          <interval>
              <value structureName = "doubleAlarmInterval">
                  <value>2.0</value>
                  <severity>major</severity>
              </value>
              <value structureName = "doubleAlarmInterval">
                  <value>4.0</value>
                  <severity>minor</severity>
              </value>
              <value structureName = "doubleAlarmInterval">
                  <value>6.0</value>
                  <severity>none</severity>
              </value>
              <value structureName = "doubleAlarmInterval">
                  <value>8.0</value>
                  <severity>minor</severity>
              </value>
              <value structureName = "doubleAlarmInterval">
                  <value>10.0</value>
                  <severity>major</severity>
              </value>
          </interval>
          <outOfRange><choice>invalid</choice></outOfRange>
          <hystersis>0.1</hystersis>
    </valueAlarm>
</record>



<record name = "psLinked" type = "powerSupply" >
    <voltageInput supportName = "inputSupport" structureName = "inputSupport">
        <pvname>voltage</pvname>
        <process>false</process>
    </voltageInput>
    <currentOutput supportName = "outputSupport" structureName = "outputSupport">
         <pvname>current</pvname>
         <process>true</process>
    </currentOutput>
</record>

<record name = "current" type = "double" >
    <output structureName = "linearConvertOutput">
        <linearConvert>
            <deviceHigh>4095</deviceHigh>
            <deviceLow>0</deviceLow>
            <engUnitsLow>0.0</engUnitsLow>
            <engUnitsHigh>10.0</engUnitsHigh>
        </linearConvert>
        <output supportName = "outputSupport" structureName = "outputSupport">
                <pvname>dacCurrentSupported</pvname>
                <process>true</process>
        </output>

    </output>    
    <valueAlarm structureName = "doubleAlarm">
          <active>true</active>
          <interval>
              <value structureName = "doubleAlarmInterval">
                  <value>2.0</value>
                  <severity>major</severity>
              </value>
              <value structureName = "doubleAlarmInterval">
                  <value>4.0</value>
                  <severity>minor</severity>
              </value>
              <value structureName = "doubleAlarmInterval">
                  <value>6.0</value>
                  <severity>none</severity>
              </value>
              <value structureName = "doubleAlarmInterval">
                  <value>8.0</value>
                  <severity>minor</severity>
              </value>
              <value structureName = "doubleAlarmInterval">
                  <value>10.0</value>
                  <severity>major</severity>
              </value>
          </interval>
          <outOfRange><choice>invalid</choice></outOfRange>
          <hystersis>0.1</hystersis>
    </valueAlarm>
</record>

<record name = "dacCurrentSupported" type = "int">
</record>

</IOCDatabase>
