<?xml version="1.0" ?>
<database>

<record recordName = "syncStringDriver" extends = "portCreate">
    <scalar name = "factoryName">org.epics.ioc.pdrv.testDriver.SerialDriverFactory</scalar>
    <scalar name = "portName">syncSerialPort</scalar>
    <structure name = "driverParameters" extends = "serialDriver" >
        <scalar name = "delay">0.0</scalar>
    </structure>
</record>

<record recordName = "stringCounter">
    <scalar name = "value" scalarType = "byte"/>
    <structure name = "alarm" extends = "alarm" />
    <structure name = "timeStamp" extends = "timeStamp" />
    <structure name = "input" extends = "calculation" >
      <structure name = "calculator">
        <scalar name ="expression">(value+1&lt;=10)?(value+1):0</scalar>
      </structure>
    </structure>
     <structure name = "scan" extends = "scan">
        <structure name = "type"><scalar name = "choice">periodic</scalar></structure>
        <scalar name = "rate">1.0</scalar>
    </structure>
    <structure name = "link" extends = "generic" >
        <structure name = "1" extends = "caOutputLink">
            <scalar name = "wait" scalarType = "boolean" >true</scalar>
            <scalar name = "pvname">stringOut</scalar>
            <scalar name = "request">record[process=true]</scalar>
        </structure>
        <structure name = "2" extends = "caProcessLink">
            <scalar name = "wait" scalarType = "boolean" >false</scalar>
            <scalar name = "pvname">stringIn</scalar>
        </structure>
    </structure>
</record>


<record recordName = "stringOut">
    <scalar name = "value" scalarType = "string"/>
    <structure name = "timeStamp" extends = "timeStamp" />
    <structure name = "outlink" extends = "portDriverLink">
        <scalar name = "portName">syncSerialPort</scalar>
        <scalar name = "deviceName">0</scalar>
        <scalar name = "timeout">.2</scalar>
        <structure name = "output" extends = "pdrvSerialOutput"/>
    </structure>
</record>

<record recordName = "stringIn">
    <scalar name = "value" scalarType = "string"/>
    <structure name = "timeStamp" extends = "timeStamp" />
    <structure name = "link" extends = "portDriverLink">
        <scalar name = "portName">syncSerialPort</scalar>
        <scalar name = "deviceName">0</scalar>
        <scalar name = "timeout">.2</scalar>
        <structure name = "input" extends = "pdrvSerialInput"/>
    </structure>
</record>


</database>
