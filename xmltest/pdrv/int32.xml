<database>

<record recordName = "syncInt32Port" extends = "portCreate">
    <scalar name = "factoryName">org.epics.pvioc.pdrv.testDriver.Int32DriverFactory</scalar>
    <scalar name = "portName">syncInt32Port</scalar>
    <structure name = "driverParameters" extends = "int32Driver" >
        <scalar name = "delay">0.0</scalar>
        <scalar name = "numberRegisters">2</scalar>
        <scalar name = "low">-2048</scalar>
        <scalar name = "high">2047</scalar>
    </structure>
</record>

