<?xml version="1.0" ?>
<database>

<record recordName = "serialPort" extends = "portCreate">
    <scalar name = "factoryName">org.epics.pvioc.pdrv.vxi11.DriverFactory</scalar>
    <scalar name = "portName">serialPort</scalar>

    <structure name = "driverParameters" extends = "vxi11Driver" >
        <scalar name = "hostName">192.168.1.10</scalar>
        <scalar name = "vxiName">hpib</scalar>
<!--
        <scalar name = "eosInput">NL</scalar>
        <scalar name = "eosOutput">NL</scalar>
-->
    </structure>
</record>

<record recordName = "serialDeviceControl" extends = "portDeviceControl" >
    <scalar name = "portName">serialPort</scalar>
    <scalar name = "deviceName">3</scalar>
<!--
    <scalar name = "traceMask">0xfff</scalar>
    <scalar name = "traceIOMask">0xfff</scalar>
    <scalar name = "processAtStart">true</scalar>
-->
</record>


<record recordName = "intToSerial">
    <scalar name = "value" scalarType = "int">1000</scalar>
    <structure name = "alarm" extends = "alarm" />
    <structure name = "timeStamp" extends = "timeStamp" />
    <structure name = "link" extends = "portDriverLink">
        <scalar name = "portName">serialPort</scalar>
        <scalar name = "deviceName">3</scalar>
        <scalar name = "timeout">.2</scalar>
        <structure name = "command" extends = "pdrvScalarCommand">
            <scalar name = "prefix">:VOLT:DC:RANG:UPP</scalar>
            <structure name = "output" extends = "pdrvSerialOutput"/>
        </structure>
        <structure name = "discardResponse" extends = "pdrvStringNoop">
            <structure name = "query" extends = "pdrvScalarQuery">
                <scalar name = "request">:VOLT:DC:RANG:UPP?</scalar>
                <structure name = "output" extends = "pdrvSerialOutput"/> 
                <structure name = "input" extends = "pdrvSerialInput"/>
            </structure>
        </structure>
    </structure>
    <structure name = "scan" extends = "scan">
        <structure name = "type"><scalar name = "choice">periodic</scalar></structure>
        <scalar name = "rate">0.5</scalar>
    </structure>
</record>


<record recordName = "serialToDouble">
    <scalar name = "value" scalarType = "double"/>
    <structure name = "alarm" extends = "alarm" />
    <structure name = "timeStamp" extends = "timeStamp" />
    <structure name = "link" extends = "portDriverLink">
        <scalar name = "portName">serialPort</scalar>
        <scalar name = "deviceName">3</scalar>
        <scalar name = "timeout">.2</scalar>
        <structure name = "query" extends = "pdrvScalarQuery">
            <scalar name = "request">:FETC?</scalar>
            <structure name = "output" extends = "pdrvSerialOutput"/>
            <structure name = "input" extends = "pdrvSerialInput"/>
        </structure>
    </structure>
    <structure name = "scan" extends = "scan">
        <structure name = "type"><scalar name = "choice">periodic</scalar></structure>
        <scalar name = "rate">0.5</scalar>
    </structure>
</record>

<record recordName = "getIDN">
    <scalar name = "value" scalarType = "string"/>
    <structure name = "alarm" extends = "alarm" />
    <structure name = "timeStamp" extends = "timeStamp" />
    <structure name = "link" extends = "portDriverLink">
        <scalar name = "portName">serialPort</scalar>
        <scalar name = "deviceName">3</scalar>
        <scalar name = "timeout">.2</scalar>
        <structure name = "query" extends = "pdrvScalarQuery">
            <scalar name = "request">*IDN?</scalar>
            <structure name = "output" extends = "pdrvSerialOutput"/>
        </structure>
        <structure name = "input" extends = "pdrvSerialInput"/>
    </structure>
    <structure name = "scan" extends = "scan">
        <structure name = "type"><scalar name = "choice">periodic</scalar></structure>
        <scalar name = "rate">0.5</scalar>
    </structure>
</record>

</database>
